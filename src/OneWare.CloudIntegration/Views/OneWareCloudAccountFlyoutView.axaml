<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:OneWare.CloudIntegration.ViewModels"
             xmlns:controls="clr-namespace:OneWare.Essentials.Controls;assembly=OneWare.Essentials"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="OneWare.CloudIntegration.Views.OneWareCloudAccountFlyoutView" 
             x:DataType="viewModels:OneWareCloudAccountFlyoutViewModel">
    
    <UserControl.DataTemplates>
        <DataTemplate DataType="viewModels:IOneWareCloudAccountFlyoutSetting">
            <Grid ColumnDefinitions="14,*,*" VerticalAlignment="Center">
                <Image Source="{Binding Icon}"></Image>
                <TextBlock Text="{Binding Value}" Grid.Column="1" HorizontalAlignment="Left" Margin="4,0"></TextBlock>
                <TextBlock Text="{Binding Title}" Opacity=".5" Grid.Column="2" HorizontalAlignment="Right"></TextBlock>
            </Grid>
        </DataTemplate>
    </UserControl.DataTemplates>
    
    <Button Padding="4">
        <Button.Content>
            <DockPanel LastChildFill="True">
                <Border Margin="4,0" DockPanel.Dock="Left" ClipToBounds="True" CornerRadius="24">
                    <Panel>
                        <Image Source="{Binding Image}"/>
                        <Image IsVisible="{Binding Image, FallbackValue={x:Null}, 
                            Converter={x:Static ObjectConverters.IsNull}}" Source="{DynamicResource CodeIcons.Account}" Margin="2"/>
                    </Panel>
                </Border>
                <TextBlock DockPanel.Dock="Right" Text="{Binding Email}" VerticalAlignment="Center"/>
            </DockPanel>
        </Button.Content>
        <Button.Flyout>
            <Flyout Placement="BottomEdgeAlignedLeft">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" MinWidth="180" Margin="4,0">
                    <Button ToolTip.Tip="Settings" Height="26" HorizontalContentAlignment="Left" Padding="0" 
                            Command="{Binding HandleAuthAsync}"
                            CommandParameter="{Binding $parent[Button]}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="4">
                                <Image Width="14" Height="14" Source="{DynamicResource Material.SettingsOutline}"/>
                                <TextBlock Text="{Binding SettingLabel}">
                                </TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Separator Margin="0" Padding="0"></Separator>
                    <Panel Height="28">
                        <Grid ColumnDefinitions="14,*,*" VerticalAlignment="Center">
                            <Image Width="14" Height="14" Source="{DynamicResource CodeIcons.Account}"/>
                            <TextBlock Text="{Binding Email}" Grid.Column="1" HorizontalAlignment="Left" Margin="4,0"></TextBlock>
                            <TextBlock Text="Email" Opacity=".5" Grid.Column="2" HorizontalAlignment="Right"></TextBlock>
                        </Grid>
                    </Panel>
                    <ItemsControl ItemCount="" ItemsSource="{Binding Information}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Panel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ContentControl Height="28" Content="{Binding .}" IsVisible="{Binding IsVisible}"></ContentControl>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <Separator Margin="0" Padding="0"></Separator>
                    <controls:HyperLink Label="{Binding UrlLabel}" 
                                           Url="{Binding Url}"
                                           Margin="6,4, 6, 0" 
                                           HorizontalContentAlignment="Center" HorizontalAlignment="Center">
                    </controls:HyperLink>
                </StackPanel>
            </Flyout>
        </Button.Flyout>
    </Button>
</UserControl>
