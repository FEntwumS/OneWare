<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:OneWare.Demo.Desktop.ViewModels"
        SystemDecorations="None"
        CanResize="False" Width="640" Height="323"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        x:Class="OneWare.Demo.Desktop.Views.SplashWindow"
        Title="SplashScreen" x:DataType="viewModels:SplashWindowViewModel">
    <Image Width="640" Height="323" Source="{Binding SplashScreen}" />
</Window>